// Write a C program to convert a given integer (in seconds) to hours, minutes and seconds. 
// Expected Output:
// Input seconds: 25300
// There are:
// H:M:S - 7:1:40
#include<stdio.h>
void main() {
    int s,H,M,S;
    printf("Input seconds: ");
    scanf("%d", &s);
    H = s/3600;
    M = s%3600/60;
    S = s%3600%60;
    printf("There are: \nH:M:S - %d:%d:%d", H,M,S); 
}
